<section>
  <h2>Create New Game</h2>

  <form class="new-game-form">
    <div>
      <label for="game-name">Name:</label>
      <input type="text" name="game-name" id="game-name" />
    </div>
    <div>
      <label for="game-description">Description:</label>
      <textarea name="game-description" id="game-description"></textarea>
    </div>
    <div>

      <label for="game-min-player">Minimum number of players:</label>
      <input
        type="number"
        name="game-min-player"
        id="game-min-player"
        min="1"
        max="9"
      />
    </div>
    <div>
      <label for="game-max-player">Maximum number of players:</label>
      <input
        type="number"
        name="game-max-player"
        id="game-max-player"
        min="1"
      />
    </div>
    <div>
      <label for="game-duration">How long the game takes to play:</label>
      <select name="game-duration" id="game-duration">
        <option value="0-1">0-1 hrs</option>
        <option value="1-2">1-2 hrs</option>
        <option value="2-3">2-3 hrs</option>
        <option value="3+"> 3+ hrs</option>
      </select>
    </div>
    <div>
      <label for="game-age-rating">What age range is appropriate for this game:</label>
      <select name="game-age-rating" id="game-age-rating">
        <option value="1+">1+ years old</option>
        <option value="2+">2+ years old</option>
        <option value="3+">3+ years old</option>
        <option value="4+">4+ years old</option>
        <option value="5+">5+ years old</option>
        <option value="7+">7+ years old</option>
        <option value="9+">9+ years old</option>
        <option value="11+">11+ years old</option>
        <option value="13+">13+ years old</option>
        <option value="15+">15+ years old</option>
        <option value="18+">18+ years old</option>
        <option value="21+">21+ years old</option>
      </select>
    </div>
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#exampleModal"
    >
      Categories
    </button>

    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Game Categories</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{#each categories}}
              <div class="custom-control custom-checkbox">
                <input
                  type="checkbox"
                  class="custom-control-input"
                  id="customCheck{{id}}"
                  value="{{id}}"
                />
                <label
                  class="custom-control-label"
                  for="customCheck{{id}}"
                >{{category_name}}</label>
              </div>
            {{/each}}
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >Close</button>
            <button
              type="button"
              class="btn btn-primary"
              data-dismiss="modal"
            >Save changes</button>
          </div>
        </div>
      </div>
    </div>
    {{! category - model w/checkboxes }}
  </form>
  <button type="submit" id="submit-new-game">Submit new game</button>
</section>
<script src="/javascript/addGame.js"></script>