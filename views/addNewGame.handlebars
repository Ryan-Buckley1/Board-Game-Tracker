  <form class="custom-form needs-validation new-game-form">
  <h2>Create New Game</h2>
    <div>
      <label for="validationCustom01">Name:</label><br/>
      <input
        type="text"
        class="form-controller"
        name="game-name"
        id="validationCustom01"
        required
      />
      <div class="invalid-feedback">Please Provide a game name</div>
    </div>
    
    <div class="gameDesc">
      <label for="validationCustom02">Description:</label><br/>
      <textarea
        name="game-description"
        id="validationCustom02"
        class="form-controller"
        maxlength="255"
        required
      ></textarea>
    </div>
    <div class="form-group">
      <div>

        <label for="validationCustom03">Minimum number of players:</label><br/>
        <input
          type="number"
          name="game-min-player"
          id="validationCustom03"
          class="form-controller"
          min="1"
          max="9"
          required
        />
        <div class="invalid-feedback">Please enter a number 1 - 9</div>
      </div>
      <div>
        <label for="validationCustom04">Maximum number of players:</label><br/>
        <input
          type="number"
          name="game-max-player"
          id="validationCustom04"
          class="form-controller"
          min="1"
          required
        />
        <div class="invalid-feedback">Please enter a number greater than 1</div>
      </div>
    </div>
    <div class="form-group">
      <button
        type="button"
        class="btn btn-light catBtn"
        data-toggle="modal"
        data-target="#exampleModal"
      >
        Categories
      </button>

      <div
        class="modal fade text-black"
        id="exampleModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Game Categories</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span class="text-white" aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              {{#each categories}}
                <div class="custom-control custom-checkbox col-4">
                  <input
                    type="checkbox"
                    class="custom-control-input"
                    id="customCheck{{id}}"
                    value="{{id}}"
                  />
                  <label
                    class="custom-control-label"
                    for="customCheck{{id}}"
                  >{{category_name}}</label>
              </div>
              {{/each}}
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >Close</button>
              <button
                type="button"
                class="btn btn-primary"
                data-dismiss="modal"
              >Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group game-duration">
      <div>
        <label for="game-duration">How long does the game take to play?:</label><br/>
        <select
          name="game-duration"
          id="game-duration"
          class="custom-select"
          required
        >
          <option value="0-1">0-1 hrs</option>
          <option value="1-2">1-2 hrs</option>
          <option value="2-3">2-3 hrs</option>
          <option value="3+"> 3+ hrs</option>
        </select>
      </div>
      <div>
        <label for="game-age-rating">What age range is appropriate for this
          game?:</label><br/> 
        <select
          name="game-age-rating"
          id="game-age-rating"
          class="custom-select"
          required
        >
          <option value="1+">1+ years old</option>
          <option value="2+">2+ years old</option>
          <option value="3+">3+ years old</option>
          <option value="4+">4+ years old</option>
          <option value="5+">5+ years old</option>
          <option value="7+">7+ years old</option>
          <option value="9+">9+ years old</option>
          <option value="11+">11+ years old</option>
          <option value="13+">13+ years old</option>
          <option value="15+">15+ years old</option>
          <option value="18+">18+ years old</option>
          <option value="21+">21+ years old</option>
        </select>
      </div>
    </div>
    <div class="addImg">
      <label for="image_file">Upload Image of Game</label><br/>
      <input type="file" class="my-3" id="image_file" />
    </div>
    {{! category - model w/checkboxes }}



    <button type="submit" id="submit-new-game" class="btn btn-primary">Submit new game</button>


  </form>

