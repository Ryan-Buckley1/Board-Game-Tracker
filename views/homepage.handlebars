
  <body>
    <div class="s01">
      <form>
        <div class="inner-form">

          <div class="input-field first-wrap">
            <input
              id="search"
              type="text"
              placeholder="Search for a game or a category"
            />
            <div class="d-flex justify-content-center">
              {{#if loggedIn}}
                <a
                  class="nav-link text-white mt-2 text-decoration-underline"
                  href="/create/game"
                >Create A Game</a>
              {{/if}}
            </div>
          </div>
          <div class="input-field second-wrap">
            {{! <input id="location" type="text" placeholder="Category" /> }}
            <select name="searchSelector" id="searchSelector">
              <option value="defaultValue" selected>Search by:</option>
              {{!-- {{#each categories}} --}}
              <option value="1">Game</option>
              <option value="2">Category</option>
              {{!-- {{/each}} --}}
            </select>

          </div>
          <div class="input-field third-wrap">
            <button
              class="btn-search"
              type="button"
              id="search-button"
            >Search</button>
          </div>
        </div>
      </form>
    </div>
    <script src="/javascript/homepage.js"></script>

