<link rel="stylesheet" href="/stylesheets/signUp.css">
<form class="custom-form login-form">
  <div>
    <h1>Login</h1>
  </div>
  <div class="mb-3">
    <label for="email-login" class="form-label"><strong>Email address: </strong></label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text"></div>
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label"><strong>Password: </strong></label>
    <input type="password" class="form-control" id="password-login" name="password-login">
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="rememberMeCheck">
    <label class="form-check-label" for="rememberMeCheck">Keep Me Signed In</label>
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>

<script src="/javascript/login.js"></script>